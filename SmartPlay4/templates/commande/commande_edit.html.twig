{% extends 'base.html.twig' %}

{% block body %}
<div class="container" style="margin-top:100px ;">
   <h1>edit Commande</h1> 
    <div  class="commande-edit-form-container">
     
            {{form_start(formCommande)}}
            <div class="form-group">
                <label >Client</label>
                {{form_widget(formCommande.code_clt_cde)}}
            </div>
            <div class="form-group">
                <label >Date</label>
                {{form_widget(formCommande.date_cde)}}
            </div>
            <br/>
            <div class="form-group">
                <label>Heure</label>
                {{form_widget(formCommande.heure_cde)}}
            </div>
            <br/>
            <div class="form-group">
                <label>Remise</label>
                {{form_widget(formCommande.remise_cde,{attr:{max:100,min:0}})}}
            </div>
             <br/>
            <div class="form-group">
                <label>Montant</label>
                {{form_widget(formCommande.mnt_cde,{type:"number",step:"0.01",attr:{min:0}})}}
            </div>
            <br/>
            <!--
        here
            -->
            <br/>

            {{form_end(formCommande)}}
           
    </div>
    
</div>
{% endblock %}
