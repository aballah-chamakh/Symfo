{% extends 'base.html.twig' %}

{% block body %}
<div class="container" style="margin-top:100px ;">
<a href="{{path('create_jouet')}}" class="btn btn-primary">Nouveau jouet</a>
<br/>
{% if jouets|length > 0  %}
    <div id="jouet-liste-container">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">code jouet</th>
                    <th scope="col">des jouet</th>
                    <th scope="col">qte stock jouet</th>
                    <th scope="col">pu jouet</th>
                    <th scope="col">edit</th>
                    <th scope="col">delete</th>
                </tr>
            </thead>
            <tbody>
            {% for jouet in jouets %}
                <tr>
                    <td>{{jouet.code_jouet}}</td>
                    <td>{{jouet.des_jouet}}</td>
                    <td>{{jouet.qte_stock_jouet}}</td>
                    <td>{{jouet.PU_jouet}}</td>
                    <td><a href="{{path('jouet_edit',{code_jouet:jouet.code_jouet})}}" class="btn btn-success" >edit</a></td> 
                    <td><button data-code-jouet="{{jouet.code_jouet}}" class="btn btn-primary delete-jouet-btn" >delete</button></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <div id="jouet-liste-empty-container">
        <h1>Aucune jouet existe</h1>
    </div>
{% endif %}
</div>
{% endblock %}

{% block js %}
        <script src="/js/delete_jouet.js"></script>
{% endblock %}