{% extends 'base.html.twig' %}

{% block body %}
<div class="container" style="margin-top:100px ;">
 <a href="{{path('create_commande')}}" class="btn btn-primary">Nouveau commande</a>
 <br/>
{% if commandes|length > 0  %}
    <div id="commande-liste-container">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">client</th>
                    <th scope="col">date</th>
                    <th scope="col">heure</th>
                    <th scope="col">remise</th>
                    <th scope="col">mnt</th>
                    <th scope="col">edit</th>
                    <th scope="col">delete</th>
                </tr>
            </thead>
            <tbody>
            {% for commande in commandes %}
                <tr>
                    <td>{{commande.des_clt}}</td>
                    <td>{{commande.date_cde|date("m/d/Y") }}</td>
                    <td>{{commande.heure_cde|date('H:i:s') }}</td>
                    <td>{{commande.remise_cde}}</td>
                    <td>{{commande.mnt_cde}}</td>
                    <td><a href="{{path('commande_edit',{num_cde:commande.num_cde})}}" class="btn btn-success" >edit</a></td> 
                    <td><button data-num-cde="{{commande.num_cde}}" class="btn btn-primary delete-commande-btn" >delete</button></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <div id="commande-liste-empty-container">
        <h1>Aucune commande existe</h1>
    </div>
{% endif %}
</div>
{% endblock %}

{% block js %}
        <script src="/js/delete_commande.js"></script>
{% endblock %}